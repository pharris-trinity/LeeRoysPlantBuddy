<!-- products/index.ejs -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/styles/styles.css">
        <!-- <link rel="stylesheet" href="/styles/product-admin.css"> -->
        <title>LeeRoy's Pets N' More Products</title>
        <script>
            function addToCart(product) {
                console.log(product);
                fetch('/addToCart', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ product }),
                })
                .then(response => {
                    if(!response.ok) {
                        throw new Error(`HTTP Error! Status: ${response.status}`)
                    }
                })
            }

            function product_clicked(product_id) {
                var checkbox = document.getElementById(`checkbox${product_id}`);
                
                if(checkbox.checked) {
                    console.log(`remove from active ${product_id}`);
                } else {
                    console.log(`add to active ${product_id}`);
                }
            }
            
        </script>
    </head>
    <body>
        <div>
            <h1 class="centered-title">Product Page</h1>
            <h2 class="centered-title">Check out all our products</h2>    
        </div>
        <div class="navbar">
            <span><a href="/">Home</a></span>
            <span><a href="/product">Products</a></span>
            <span><a href="/checkout">Checkout</a></span>
        </div>
        <div class="container">
            <ul class="product-list">
                <% products.forEach(product => { %>
                    <% if(product.display) { %>
                        <li class="product-list-item">
                            <span><img class="image-text" src="<%=product.image%>" alt="<%= product.description%> Image"></span>
                            <span class="product-text"><%= product.description %></span>
                            <span class="price-text">$<%= product.price %></span>
                            <span><label class="toggle-container"><input id="checkbox<%=product.id%>" type="checkbox" onclick="product_clicked('<%=product.id %>')"><div class="toggle-slider"></div></label></span>
                        </li>
                    <% } %>
                <% }); %>
            </ul>
        </div>
      </body>
</html>
